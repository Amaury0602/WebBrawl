export function updateOnChange() {
  const form = document.querySelector('.edit_fighter');
  if (form) {
    const nameInput = document.querySelector('.name-change')
    const equipSelector = document.querySelectorAll('.equipment-selector')
    equipSelector.forEach((selector) => {
      selector.addEventListener('change', (e) => {
        form.submit();
      })
    })

    document.addEventListener('keyup', e => {
      if (e.keyCode === 13) {
        form.submit()
      }
    })
  }
}
