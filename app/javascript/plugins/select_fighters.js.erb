export function selectFighters() {
  const startBattle = document.querySelector('.battle-link');
  if (startBattle) {
    const selectButtons = document.querySelectorAll('.select-fighter');
    startBattle.style.display = "none"

    selectButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
        e.currentTarget.classList.toggle('active');
        const activeFighters = document.getElementsByClassName('active')
        const enemyFighter = document.querySelector('#battle_enemy_fighter_id');
        const yourFighter = document.querySelector('#battle_your_fighter_id');
        if (activeFighters.length === 2) {
          yourFighter.value = activeFighters[0].attributes[1].value
          enemyFighter.value = activeFighters[1].attributes[1].value
          startBattle.style.display = "block"
        } else {
          startBattle.style.display = "none"
        }
      })
    })
  }
}
