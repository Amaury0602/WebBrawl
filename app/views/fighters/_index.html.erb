<div class="fighter-card" >
  <div class="name">
    <p><%= link_to fighter.name, fighter_path(fighter)%> (lvl:<%= fighter.exp %>) </p>
  </div>
  <div class="stats">
    <div class="stats-numbers">
     <p><%= image_tag "heart.PNG", class: "heart-icon" %>
      <% if fighter.defense_equipment && !fighter.defense_equipment.zero?%>
        <%= fighter.health%><span class="bonus-armor">+<%=fighter.defense_equipment %></span></p>
      <% else %>
        <%= fighter.health%></p>
      <% end %>
     <p><%= image_tag "sword.PNG", class: "sword-icon" %>
      <% if fighter.offense_equipment && !fighter.offense_equipment.zero?%>
        <%= fighter.attack%><span class="bonus-att">+<%=fighter.offense_equipment %></span> </p>
      <% else %>
        <%= fighter.attack%></p>
      <% end %>
    </div>
    <div class="photo">
      <% if !fighter.photo.nil? %>
        <%= cl_image_tag fighter.photo, height: 150, width: 150, crop: :fill %>
      <% end %>
    </div>
  </div>
  <button class="select-fighter" data-fighter="<%= fighter.id %>" ><strong>SELECT THIS FIGHTER</strong></button>
</div>
